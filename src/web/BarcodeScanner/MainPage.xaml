<UserControl x:Class="BarcodeScanner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <Image HorizontalAlignment="Left" Name="imgDecoderBarcode" Stretch="None" VerticalAlignment="Top" />
            <Grid HorizontalAlignment="Left" Name="grid3" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="29" />
                    <RowDefinition Height="29" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
            </Grid>
            <Rectangle HorizontalAlignment="Left" Name="rectangle2" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="240" Height="180" />
        </StackPanel>
    </Grid>
</UserControl>
