@model IEnumerable<CellarBotHome.Models.sp_searchBreweries_Result>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Search Results for '" + ViewBag.SearchTerm + "'";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<ul>
    @foreach (var brewery in Model)
    {
        <li>@Html.ActionLink((string)brewery.name, "Details", new { id = brewery.id })</li>
    }
</ul>
<!-- output a paging control that lets the user navigation to the previous page, next page, etc -->
@Html.PagedListPager((PagedList.IPagedList)Model, page => Url.Action("SearchResults", new { page, searchTerm = ViewBag.SearchTerm }))